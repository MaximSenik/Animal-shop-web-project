@model Animals;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create new animal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

</head>
<body>
    @if (ViewBag.erorAnimal)
    {

         <div style="background-color:palevioletred">
            <h3 >Eror</h3>
            <p>the ditails are not valid</p>
        </div>
    }
    
    <h1 style="margin-top:50px; margin-left:50%;">Create new animal</h1>
    <br />
  

    @using (Html.BeginForm("SaveAnimalToDb", "Categories", FormMethod.Post))
    {
        <table class="create-animal-form">
            <tr>
                <th>
                    <span>Name: </span>
                </th>
                <th>
                    @Html.TextBoxFor(m => m.Name)
                </th>
            </tr>
            <tr>
                <th>
                    <span>Age: </span>
                </th>
                <th>
                     <input name="Age" type="number"  />
                </th>
            </tr>
            <tr>
                <th>
                    <span>PictureURL: </span>
                </th>
                <th>
                    @Html.TextBoxFor(m => m.PictureName)
                </th>
            </tr>
            
            <tr>
                <th>
                    <span>Description: </span>
                </th>
                <th>
                    @Html.TextBoxFor(m => m.Description)
                </th>
            </tr>
            <tr>
                <th>
                    <span>Price: </span>
                </th>
                <th>
                   <input name="Price" type="number"  />
                </th>
            </tr>

                    <input name="CategoryName" type="hidden" value="@ViewBag.categoryName" />
         
        </table>
        <input id="Submit" type="submit" value="submit" />
    }
</body>

